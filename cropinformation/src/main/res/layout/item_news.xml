<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

      <data>
          <variable
              name="property"
              type="com.example.cropinformation.apiservice.response.DataX" />
      </data>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                 <com.google.android.material.card.MaterialCardView
                     android:id="@+id/imageView"
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_marginStart="8dp"
                     android:layout_marginTop="8dp"
                     android:layout_marginBottom="16dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:cardBackgroundColor="@color/white"
                     app:cardCornerRadius="8dp">
                       <ImageView
                           android:layout_width="100dp"
                           android:layout_height="100dp"

                           android:scaleType="fitXY"
                           imageUrl="@{property.tumb_url}"
                           android:src="@drawable/img_video"
                           />
                 </com.google.android.material.card.MaterialCardView>


                  <TextView
                      android:id="@+id/textView4"
                      style="@style/SemiBold"
                      android:layout_width="233dp"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="16dp"
                      android:layout_marginBottom="8dp"
                      android:text="@{property.title}"
                      tools:text="How Natural Farming Enhances The Yield Value Per Acre"
                      android:textColor="@color/black"
                      app:layout_constraintBottom_toBottomOf="@+id/imageView"
                      app:layout_constraintStart_toEndOf="@+id/imageView"
                      app:layout_constraintTop_toTopOf="@+id/imageView"
                      app:layout_constraintVertical_bias="0.45" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="16dp"
                      android:layout_marginTop="4dp"
                      android:text="@{property.start_date}"
                      tools:text="01 August 2201 August 22"
                      android:textColor="@color/darkGray"
                      app:layout_constraintStart_toEndOf="@+id/imageView"
                      app:layout_constraintTop_toBottomOf="@+id/textView4" />
            </androidx.constraintlayout.widget.ConstraintLayout>
      </LinearLayout>
</layout>