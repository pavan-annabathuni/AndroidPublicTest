<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_crop_protect"
    app:startDestination="@id/cropSelectionFragment">

    <fragment
        android:id="@+id/cropSelectionFragment"
        android:name="com.waycool.cropprotect.fragments.CropSelectionFragment"
        android:label="CropSelectionFragment" >
        <action
            android:id="@+id/action_cropSelectionFragment_to_pestDiseaseFragment"
            app:destination="@id/pestDiseaseFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/cropSelectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/pestDiseaseFragment"
        android:name="com.waycool.cropprotect.fragments.PestDiseaseFragment"
        android:label="PestDiseaseFragment" >
        <action
            android:id="@+id/action_pestDiseaseFragment_to_pestDiseaseDetailsFragment"
            app:destination="@id/pestDiseaseDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/pestDiseaseFragment" />
    </fragment>
    <fragment
        android:id="@+id/pestDiseaseDetailsFragment"
        android:name="com.waycool.cropprotect.fragments.PestDiseaseDetailsFragment"
        android:label="PestDiseaseDetailsFragment" >
        <action
            android:id="@+id/action_pestDiseaseDetailsFragment_to_newsFullviewActivity"
            app:destination="@id/newsFullviewActivity"
            app:popUpTo="@id/pestDiseaseDetailsFragment" />
        <action
            android:id="@+id/action_pestDiseaseDetailsFragment_to_playVideoFragment3"
            app:destination="@id/playVideoFragment3"
            app:popUpTo="@id/pestDiseaseDetailsFragment" />
    </fragment>
    <activity
        android:id="@+id/newsFullviewActivity"
        android:name="com.waycool.newsandarticles.view.NewsFullviewActivity"
        android:label="NewsFullviewActivity" />
    <fragment
        android:id="@+id/playVideoFragment3"
        android:name="com.waycool.videos.fragments.PlayVideoFragment"
        android:label="PlayVideoFragment" />
</navigation>