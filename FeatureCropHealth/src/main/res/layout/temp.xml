<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:layout_height="wrap_content"
    tools:context=".ui.detect.HowToClickFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/how_to_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space16"
            android:layout_marginTop="24dp"
            android:text="How to Click this Image?"
            android:textColor="#000000"
            android:textSize="@dimen/txt16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/space16"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space30"
        android:layout_marginTop="@dimen/space30"
        android:layout_marginEnd="@dimen/space30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clParent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageOne"
            android:layout_width="@dimen/space150"
            android:layout_height="@dimen/space150"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/space16"
            android:src="@drawable/ic_right_image"
            app:layout_constraintEnd_toStartOf="@+id/imageTwo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space16"
            android:layout_marginTop="@dimen/space16"
            android:maxLines="2"
            android:minLines="2"
            android:text="Click only the Image\n of the leaf"
            android:textColor="#000000"
            android:textSize="@dimen/txt14"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageOne" />

        <ImageView
            android:id="@+id/imageTwo"
            android:layout_width="@dimen/space150"
            android:layout_height="@dimen/space150"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/space16"
            android:src="@drawable/ic_wrong_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageOne"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16"
            android:maxLines="2"
            android:minLines="2"
            android:text="Do not Capture the \n full plant"
            android:textColor="#000000"
            android:textSize="@dimen/txt14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvRight"
            app:layout_constraintTop_toBottomOf="@+id/imageTwo" />

        <ImageView
            android:id="@+id/imageThree"
            android:layout_width="@dimen/space150"
            android:layout_height="@dimen/space150"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/space16"
            android:src="@drawable/ic_right_image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRight" />

        <TextView
            android:id="@+id/tvRightTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space16"
            android:layout_marginTop="@dimen/space16"
            android:maxLines="2"
            android:minLines="2"
            android:text="Click only the Image\n of the leaf"
            android:textColor="#000000"
            android:textSize="@dimen/txt14"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageThree" />

        <ImageView
            android:id="@+id/imageFour"
            android:layout_width="@dimen/space150"
            android:layout_height="@dimen/space150"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/space16"
            android:src="@drawable/ic_right_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWrong" />

        <TextView
            android:id="@+id/tvWrongTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16"
            android:maxLines="2"
            android:minLines="2"
            android:text="Do not Capture the \n full plant"
            android:textColor="#000000"
            android:textSize="@dimen/txt14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@+id/tvRightTwo"
            app:layout_constraintTop_toBottomOf="@+id/imageFour" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


