<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <Button
       android:id="@+id/videos_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:text="Videos"
       android:textColor="#ffffff"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/news_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:text="News and Articles"
       android:textColor="#ffffff"
       app:layout_constraintEnd_toEndOf="@+id/videos_button"
       app:layout_constraintStart_toStartOf="@+id/videos_button"
       app:layout_constraintTop_toBottomOf="@+id/videos_button" />

   <Button
       android:id="@+id/weather_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:text="Weather"
       android:textColor="#ffffff"
       app:layout_constraintEnd_toEndOf="@+id/news_button"
       app:layout_constraintStart_toStartOf="@+id/news_button"
       app:layout_constraintTop_toBottomOf="@+id/news_button" />
   <Button
       android:id="@+id/cropprotect_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:text="Crop Protect"
       android:textColor="#ffffff"
       app:layout_constraintEnd_toEndOf="@+id/weather_button"
       app:layout_constraintStart_toStartOf="@+id/weather_button"
       app:layout_constraintTop_toBottomOf="@+id/weather_button" />

   <Button
       android:id="@+id/logout_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="32dp"
       android:text="logout"
       android:textColor="#ffffff"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <Button
       android:id="@+id/crophealth_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:text="Ai Crop Health"
       android:textColor="#ffffff"
       app:layout_constraintEnd_toEndOf="@+id/cropprotect_button"
       app:layout_constraintStart_toStartOf="@+id/cropprotect_button"
       app:layout_constraintTop_toBottomOf="@+id/cropprotect_button" />
   <Button
       android:id="@+id/add_crop"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:text="Add Crop"
       android:textColor="#ffffff"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/crophealth_button" />

   <TextView
       android:id="@+id/textView5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="16dp"
       android:text="TextView"
       android:textColor="@color/textdark"
       app:layout_constraintBottom_toTopOf="@+id/logout_button"
       app:layout_constraintEnd_toEndOf="@+id/logout_button"
       app:layout_constraintStart_toStartOf="@+id/logout_button" />
</androidx.constraintlayout.widget.ConstraintLayout>