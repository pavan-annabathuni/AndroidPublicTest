<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="50dp"
    android:layout_height="wrap_content">

    <com.skydoves.progressview.ProgressView
        android:id="@+id/progressView1"
        android:layout_width="22dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressView_autoAnimate="true"
        app:progressView_colorBackground="@color/LightGray"
        app:progressView_colorProgress="@color/Skybule"
        app:progressView_max="100"
        app:progressView_min="0"
        app:progressView_orientation="vertical"
        app:progressView_progress="80"
        app:progressView_radius="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>