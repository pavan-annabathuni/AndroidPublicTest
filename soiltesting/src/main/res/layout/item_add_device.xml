<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/txt10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_update"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddDeviceStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Device 1 : GWX G555 "
                android:textColor="#111827"
                android:textSize="@dimen/txt16"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ivAddDeviceEnd"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivAddDeviceEnd"
                android:layout_width="@dimen/space100"
                android:layout_height="@dimen/space75"
                android:layout_marginStart="@dimen/space12"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_device_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBattery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintEnd_toStartOf="@+id/view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivAddDeviceEnd"
                app:layout_constraintTop_toBottomOf="@+id/tvAddDeviceStart">

                <ImageView
                    android:id="@+id/battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space12"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_battery"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEnableAddDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Battery"
                    android:textColor="#5D6571"
                    android:textSize="@dimen/txt14"
                    app:layout_constraintStart_toEndOf="@+id/battery"
                    app:layout_constraintTop_toBottomOf="@+id/totalAreea" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/totalAreea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"

                    android:text=" 85%"
                    android:textColor="#111827"
                    android:textSize="@dimen/txt16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/battery"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBatteryTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/tvAddDeviceStart">

                <ImageView
                    android:id="@+id/batteryTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space12"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_icon_awesome_mountain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEnableAddDeviceTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"

                    android:text="Battery"
                    android:textColor="#5D6571"
                    android:textSize="@dimen/txt14"
                    app:layout_constraintStart_toEndOf="@+id/batteryTwo"
                    app:layout_constraintTop_toBottomOf="@+id/totalAreeaTwo" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/totalAreeaTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text=" 85%"
                    android:textColor="#111827"
                    android:textSize="@dimen/txt16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/batteryTwo"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/view"
                android:layout_width="2dp"
                android:layout_height="32dp"
                android:background="#EBECF2"
                app:layout_constraintBottom_toTopOf="@+id/belowBattery"
                app:layout_constraintEnd_toStartOf="@+id/clBatteryTwo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/clBattery"
                app:layout_constraintTop_toBottomOf="@+id/tvAddDeviceStart" />

            <View
                android:id="@+id/belowBattery"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/space12"
                android:background="#EDEDED"
                app:layout_constraintTop_toBottomOf="@+id/clBattery" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/space12"
                android:layout_marginBottom="@dimen/space12"
                android:text="Last Updated: Today Tue 26, Jul"
                android:textColor="#5D6571"
                android:textSize="@dimen/txt12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/belowBattery" />

            <ImageView
                android:id="@+id/ivUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space12"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_update_refresh"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/belowBattery" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLastUpdateRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Update"
                android:textColor="#146133"
                android:textSize="@dimen/txt12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivUpdate"
                app:layout_constraintTop_toBottomOf="@+id/belowBattery" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>