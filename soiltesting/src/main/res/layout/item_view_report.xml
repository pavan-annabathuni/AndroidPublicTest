<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="@dimen/txt8"
    android:layout_margin="@dimen/txt16"
    app:cardCornerRadius="@dimen/space10"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivEmojiReport"
            android:layout_width="@dimen/txt32"
            android:layout_height="@dimen/txt32"
            android:layout_marginStart="@dimen/txt16"
            android:layout_marginTop="@dimen/txt16"
            android:src="@drawable/ic_emoji_view_report"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="37dp"
            android:layout_height="@dimen/txt32"
            android:layout_marginStart="@dimen/txt8"
            android:layout_marginTop="@dimen/txt16"
            android:text="7.18"
            android:textColor="#000000"
            android:textSize="@dimen/txt18"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivEmojiReport"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txt16"
            android:layout_marginTop="4dp"
            android:text="pH"
            android:textColor="#828699"
            android:textSize="@dimen/txt14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivEmojiReport" />
        <TextView
            android:id="@+id/tvRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txt16"
            android:layout_marginTop="4dp"
            android:text="Range: 6.5 - 7.5"
            android:textColor="#000000"
            android:layout_marginBottom="@dimen/txt16"
            android:textSize="@dimen/txt12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPh" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>